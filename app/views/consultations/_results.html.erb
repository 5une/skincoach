<div class="space-y-8">
  <!-- Analysis Summary -->
  <div class="bg-white rounded-lg p-6 shadow-sm">
    <h3 class="text-xl font-semibold text-gray-900 mb-4">Your Skin Analysis</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <h4 class="font-medium text-gray-700 mb-2">Skin Type</h4>
        <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">
          <%= consultation.skin_type&.titleize || "Unknown" %>
        </span>
      </div>
      
      <div>
        <h4 class="font-medium text-gray-700 mb-2">Main Concerns</h4>
        <div class="flex flex-wrap gap-2">
          <% consultation.concerns.each do |concern| %>
            <span class="inline-block bg-orange-100 text-orange-800 text-sm px-3 py-1 rounded-full">
              <%= concern.titleize %>
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <% if consultation.notes.present? %>
      <div class="mt-4">
        <h4 class="font-medium text-gray-700 mb-2">Analysis Notes</h4>
        <p class="text-gray-600 text-sm"><%= consultation.notes %></p>
      </div>
    <% end %>
  </div>

  <!-- Product Recommendations -->
  <div class="space-y-6">
    <h3 class="text-xl font-semibold text-gray-900">Recommended Products</h3>
    
    <% if consultation.rationale.present? %>
      <div class="bg-indigo-50 rounded-lg p-4">
        <h4 class="font-medium text-indigo-900 mb-2">Why These Products?</h4>
        <p class="text-indigo-700 text-sm"><%= consultation.rationale %></p>
      </div>
    <% end %>

    <!-- Product Categories -->
    <% consultation.product_picks.each do |category, products| %>
      <div class="bg-white rounded-lg p-6 shadow-sm">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 capitalize">
          <%= category.humanize %>
          <% if category == 'spot_treatment' %>
            - Targeted Treatments
          <% end %>
        </h4>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% Array(products).each do |product| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
              <% if product['image_url'].present? %>
                <div class="h-32 bg-gray-100 rounded-lg mb-3 flex items-center justify-center">
                  <span class="text-gray-400 text-sm">Product Image</span>
                </div>
              <% end %>
              
              <h5 class="font-medium text-gray-900 mb-1"><%= product['name'] %></h5>
              <p class="text-sm text-gray-600 mb-2"><%= product['brand'] %></p>
              
              <% if product['price'].present? %>
                <p class="text-lg font-semibold text-indigo-600 mb-2">$<%= product['price'] %></p>
              <% end %>
              
              <% if product['tags'].present? %>
                <div class="flex flex-wrap gap-1 mb-3">
                  <% Array(product['tags']).each do |tag| %>
                    <span class="inline-block bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                      <%= tag %>
                    </span>
                  <% end %>
                </div>
              <% end %>
              
              <% if product['url'].present? %>
                <a href="<%= product['url'] %>" target="_blank" rel="noopener"
                   class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white text-sm px-3 py-2 rounded">
                  View Product
                </a>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Disclaimers -->
  <div class="bg-yellow-50 border-l-4 border-yellow-400 rounded p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-yellow-700">
          <strong>Important:</strong> This analysis is for informational purposes only and is not medical advice. 
          For persistent or severe skin issues, consult a dermatologist. Always patch test new products before use.
        </p>
      </div>
    </div>
  </div>
</div>
